<TrapFocus open={open} disableRestoreFocus disableAutoFocus>
  <Stack>
    <Stack alignItems="center">
      <button type="button" onClick={() => setOpen(!open)}>
        {open ? 'Close' : 'Open'}
      </button>
    </Stack>
    {open && (
      <label>
        First name: <input type="text" />
      </label>
    )}
  </Stack>
</TrapFocus>