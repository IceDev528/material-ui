<button aria-describedby={id} type="button" onClick={handleClick}>
  Toggle Popper
</button>
<PopperUnstyled id={id} open={open} anchorEl={anchorEl}>
  <div
    style={{
      padding: '0.5rem',
      border: '1px solid',
      backgroundColor: '#fff',
      margin: '0.25rem 0px',
    }}
  >
    The content of the Popper.
  </div>
</PopperUnstyled>