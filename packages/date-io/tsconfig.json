// rollup-plugin-typescript does not resolve `extends`, so tsconfig.build.json is the base and we just alter it for IDE and testing.
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "es6",
    "sourceMap": true,
    "rootDir": ".",
    "noEmit": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./__tests__/**/*", "build"]
}
