{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "../node_modules",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es5", "dom"],
    "types": [
      "cypress",
      "@percy/cypress",
      "@types/testing-library__cypress",
      "@material-ui/core",
      "@material-ui/pickers"
    ]
  },
  "include": ["./**/*.ts", "../docs/**/*", "component/**/*.tsx"]
}
